/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: relative;
  width: 80%;
  max-width: 500px;
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  max-height: 85vh;
}

.modal-confirm {
  width: 70%;
}

.modal-header {
  padding: 12px 16px;
  border-bottom: 1px solid #eee;
  background-color: #f9f9f9;
  text-align: center;
  font-weight: 500;
}

.modal-body {
  padding: 16px;
  overflow-y: auto;
  flex: 1;
}

.modal-footer {
  display: flex;
  border-top: 1px solid #eee;
  flex-shrink: 0;
}

.modal-footer .btn {
  flex: 1;
  border-radius: 0;
  padding: 10px 0;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background-color: #3366cc;
  color: white;
}

.btn-danger {
  background-color: #e74c3c;
  color: white;
}

/* 扫描相关样式 */
.scanning-status {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px 0;
}

.loading-indicator {
  width: 24px;
  height: 24px;
  border: 2px solid #3366cc;
  border-radius: 50%;
  border-top-color: transparent;
  animation: spin 1s linear infinite;
  margin-bottom: 12px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-scan-result {
  text-align: center;
  padding: 20px 0;
  color: #999;
  display: flex;
  flex-direction: column;
}

.scan-results-list {
