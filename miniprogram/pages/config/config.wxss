/* config.wxss */
/* Override global container styles for this page */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  padding: 0; /* Override global padding */
  align-items: stretch; /* Override global alignment */
  justify-content: flex-start; /* Override global justify */
  box-sizing: border-box;
}

/* 标签页样式 */
.tab-header {
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 12px 5px;
  font-size: 14px;
  color: #666;
}

.tab-item.active {
  color: #3366cc;
  border-bottom: 2px solid #3366cc;
}

/* 内容区域 */
.tab-content {
  flex: 1; /* Allow non-settings tabs to grow */
  /* height: 0; Should not be needed if flex:1 */
  overflow-y: auto; /* Allow scrolling for Beacon/Map */
  /* Remove styling meant for the content cards */
  /* background-color: #fff; */
  /* border-radius: 8px; */
  /* padding: 12px; */
  box-sizing: border-box;
}

/* Specific styles for settings tab content - Keep this separate */
.settings-tab-content {
  flex: 1; 
  height: 0; 
  /* margin: 12px; Remove margin, parent padding reset */
  background-color: #fff; /* Apply card style here */
  border-radius: 8px; /* Apply card style here */
  margin: 12px; /* Re-add margin specifically for this tab's card */
  padding: 0; 
  overflow: hidden; 
  box-sizing: border-box;
  position: relative; /* Keep for scroll view positioning? Let's try removing absolute first */
  display: flex; 
  flex-direction: column; 
}

/* Beacon配置部分 */
.beacon-list {
  background-color: #fff;
  border-radius: 8px;
  margin: 12px; /* Add margin */
  overflow: hidden;
}

.list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #eee;
  background-color: #f9f9f9;
}

.beacon-count {
  font-size: 12px;
  color: #999;
}

.empty-list {
  padding: 40px 0;
  text-align: center;
  color: #999;
  display: flex;
  flex-direction: column;
}

.empty-tip {
  font-size: 12px;
  margin-top: 8px;
  color: #ccc;
}

.beacon-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 16px;
  border-bottom: 1px solid #eee;
}

.beacon-item:last-child {
  border-bottom: none;
}

.beacon-info {
  flex: 1;
}

.beacon-name {
  font-size: 14px;
  color: #333;
  margin-bottom: 4px;
  font-weight: 500;
}

.beacon-index {
  color: #3366cc;
  margin-right: 4px;
}

.beacon-details {
  font-size: 12px;
  color: #666;
  margin-bottom: 2px;
}

.beacon-location {
  font-size: 12px;
  color: #999;
}

.beacon-actions {
  display: flex;
}

.delete-btn {
  color: #e74c3c;
  font-size: 12px;
  padding: 6px 8px;
}

.btn-container {
  display: flex;
  justify-content: center;
  padding: 0 12px 12px 12px; 
  margin-top: 20px; 
}

/* Reset and control button styles */
.add-btn,
.scan-btn {
  box-sizing: border-box; /* Be explicit */
  border: none; /* Remove default border */
  height: 36px; /* Explicit height */
  line-height: 36px; /* Match height to vertically center text */
  /* Alternatively, use line-height: normal; if text isn't centering well */
  font-size: 14px;
  border-radius: 20px;
  text-align: center; /* Ensure text is centered */
  /* Remove individual padding for a moment, control with height */
  padding: 0 14px; /* Only horizontal padding for now */ 
}

.add-btn {
  background-color: #3366cc; /* Original color */
  /* background-color: orange !important; /* Test: Does this apply? */
  color: white;
  margin-right: 15px; 
}

.scan-btn {
  background-color: #34a853;
  color: white;
  /* No margin-left needed if add-btn has margin-right */
}

/* 地图配置部分 */
.map-section {
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
  margin: 12px; /* Add margin */
  display: flex;
  flex-direction: column;
}

.section-header {
  padding: 12px 16px;
  border-bottom: 1px solid #eee;
  background-color: #f9f9f9;
}

.map-preview {
  padding: 10px;
  position: relative;
  background-color: #f5f5f5;
  overflow: hidden;
}

.map-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
}

.map-canvas {
  width: 100%;
  height: 280px;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.map-instructions {
  padding: 10px 16px;
  background-color: #f9f9f9;
}

.instruction-item {
  display: flex;
  align-items: center;
  font-size: 12px;
  color: #666;
  margin-bottom: 6px;
}

.instruction-item icon {
  margin-right: 8px;
}

.config-form {
  padding: 12px 16px;
}

.form-group {
  margin-bottom: 12px;
}

.form-label {
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

/* **** NEW: Style for read-only form values **** */
.form-value {
  font-size: 14px;
  color: #555; /* Slightly darker than placeholder */
  padding: 8px 12px;
  background-color: #f9f9f9; /* Indicate non-editable */
  border: 1px solid #eee;
  border-radius: 4px;
  display: block; /* Ensure it takes full width */
  min-height: 1.4em; /* Match input height roughly */
  line-height: 1.4em;
  word-break: break-all; /* Allow long MACs to wrap */
}
/* **** END NEW **** */

.form-row {
  display: flex;
}

.form-input {
  flex: 1;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 8px 12px;
  font-size: 14px;
}

.form-input.half {
  width: 50%;
  margin-right: 8px;
}

.form-input.half:last-child {
  margin-right: 0;
}

.form-tip {
  font-size: 12px;
  color: #999;
  margin-top: 4px;
}

.map-buttons {
  display: flex;
  padding: 12px 16px;
  border-top: 1px solid #eee;
  margin-top: 10px;
  background-color: #fff;
}

.btn {
  flex: 1;
  margin: 0 4px;
  font-size: 14px;
  padding: 10px 0;
  text-align: center;
  border-radius: 4px;
  background-color: #f5f5f5;
  color: #666;
}

.btn-save {
  background-color: #3366cc;
  color: white;
}

