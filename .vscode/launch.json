    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: FastAPI (uvicorn)",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app", // Relative to the cwd below
                "--host",
                "0.0.0.0",
                "--port",
                "8000",
                "--reload"
                // Add "--no-reload" if reload causes issues with the debugger
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}/server" // Set CWD to the server directory
        }
    ]
}